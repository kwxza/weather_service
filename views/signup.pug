doctype html 
html 
    head    
        title Signup

        //- CSS Links

        //- Bootstrap
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css'
        integrity='sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn' crossorigin='anonymous')
        
        //- my CSS styles
        link(rel='stylesheet' href='../public/styles.css')

    body    
        //- div container of page
        .container-fluid 
            include ./header.pug
            .row    
                .col 
                    #map 
                        br
                        h1 Make an Account
                        br
                        form(action='/signup' method='post')
                            .mb-3
                                label.form-label(for='username') Username
                                input#username.form-control(type='text' name='username' required='')
                                #usernameHint.form-text Username (required)
                            .mb-3
                                label.form-label(for='Password') Password
                                input#password.form-control(type='text' name='password' required='')
                                #authorHelp.form-text Password (required)
                            button.btn.btn-primary(type='submit') Submit
                        br
                        h3 
                            a(href='/login') Click here to go back to the login page
            include ./footer.pug           

        //- Scripts

        //- jQuery
        script(src='https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js'
        integrity='sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4='
        crossorigin='anonymous')

        //- Bootstrap
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js'
        integrity='sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF'
        crossorigin='anonymous')

        //- map.js
        script(src='../public/map.js')